{
  "name": "perspective-parquet",
  "version": "0.1.2",
  "description": "Parquet viewer for perspective in JupyterLab",
  "repository": "git@github.com:timkpaine/perspective-parquet.git",
  "author": "the perspective-parquet authors <t.paine154@gmail.com>",
  "license": "Apache-2.0",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "main": "lib/index.js",
  "type": "module",
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.css"
  ],
  "jupyterlab": {
    "extension": "src/index.js",
    "webpackConfig": "./webpack.config.cjs",
    "outputDir": "../perspective_parquet/labextension",
    "discovery": {
      "server": {
        "base": {
          "name": "perspective-parquet"
        },
        "managers": [
          "pip"
        ]
      }
    }
  },
  "scripts": {
    "build:babel": "babel src/ --source-maps --out-dir lib/",
    "build:nbextension": "mkdirp ../perspective_parquet/nbextension/static/ && cpy --flat 'src/notebook.js' '../perspective_parquet/nbextension/static/'",
    "build:labextension": "rimraf ../perspective_parquet/labextension && jupyter labextension build .",
    "build": "pnpm clean && pnpm build:babel && pnpm build:labextension && pnpm build:nbextension",
    "clean": "rimraf lib",
    "fix": "pnpm lint --fix",
    "lint": "eslint -c .eslintrc.cjs --ext .js src/ tests/",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pnpm run build",
    "test": "jest --coverage --collectCoverageFrom=src/*.{js}"
  },
  "dependencies": {
    "@finos/perspective": "^3.8.0",
    "@finos/perspective-viewer": "^3.8.0",
    "@finos/perspective-viewer-d3fc": "^3.8.0",
    "@finos/perspective-viewer-datagrid": "^3.8.0",
    "@jupyterlab/application": "^4.4.9",
    "@jupyterlab/apputils": "^4.5.9",
    "@jupyterlab/notebook": "^4.4.9",
    "@jupyterlab/services": "^7.4.9",
    "@lumino/disposable": "^2.1.4",
    "parquet-wasm": "0.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@finos/perspective-esbuild-plugin": "^3.2.1",
    "@jupyterlab/builder": "^4.4.9",
    "arraybuffer-loader": "^1.0.8",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "cpy-cli": "^6.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "html-webpack-plugin": "^5.6.4",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-transform-css": "^6.0.3",
    "mkdirp": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0"
  }
}
